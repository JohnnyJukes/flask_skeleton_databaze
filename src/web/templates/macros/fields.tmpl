{% macro render_errors(errors) %}
  {% if errors %}
    <div>
      {% for error in errors %}
        <p class="form-error">{{ error }}</p>
      {% endfor %}
    </div>
  {% endif %}
{% endmacro %}

{% macro render_text_field(field) %}
  {{ field.label }}
  <div>
    {{ field(**kwargs)|safe }}
  </div>
  {{ render_errors(field.errors) }}
{% endmacro %}

{% macro render_checkbox_field(field) %}
  <div class="form-group">
    {{ field|safe }}
    <small>{{ field.label }}</small>
  </div>
{% endmacro %}

{% macro render_submit_field(field) %}
  {{ field(**kwargs)|safe }}
{% endmacro %}
